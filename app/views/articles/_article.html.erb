

<div class="post">
  <%= link_to article.url, class: "article-link" do %>
  	<%= image_tag article.img_src, class: "card-img" %>
    <h2 class="article-header"><%= article.title %></h2>
  <% end %>
  <%# image_tag post.image, class: "card-img" if post.image.attached? %>
  <div class="post-content">
  	<span class="post-user"><%= @account.institution_name if @account %></span>
  	<p><%# post.content %></p>
  </div>
  <% if current_user && current_user.admin? %>
    <div class="dropdown">
	  <button class="post-options" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	    <span class="material-icons">more_horiz</span>
	  </button>
	  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
	    <%= link_to "edit article", edit_article_path(article), class: "dropdown-item" %>
	    <%= link_to "delete article", article_path(article), method: :delete, class: "dropdown-item" %>
	  </div>
	</div>
  <% end %>
</div>
