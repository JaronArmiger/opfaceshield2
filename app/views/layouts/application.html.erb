<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
        <div class="dummy"></div>
        <%= render 'shared/links'%>
        <% if !flash.empty? %>
          <% flash.each do |msg_type, msg| %>
            <%= content_tag(:div, msg, class: "alert alert-#{msg_type}") %>
          <% end %>
        <% end %>
        <%= yield %>
        <div class="dummy bottom"></div>
    </div>
    <% if current_user && current_user.admin? %>
      <%= render 'layouts/admin_icon_bar' %>
    <% else %>
      <% if current_user %>
        <%= render 'layouts/icon_bar' %>
      <% end %>
    <% end %>
    <%= render 'layouts/footer' %>
  </body>
</html>
